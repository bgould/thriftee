<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>thriftee-root</artifactId>
    <groupId>org.thriftee</groupId>
    <version>0.2-SNAPSHOT</version>
  </parent>

  <artifactId>thriftee-core</artifactId>
  <name>thriftee-core</name>

  <dependencies>
    <!-- compile scoped dependencies -->
    <dependency>
      <groupId>net.sf.scannotation</groupId>
      <artifactId>scannotation</artifactId>
      <version>1.0.2</version>
    </dependency>
    <dependency>
      <groupId>org.json</groupId>
      <artifactId>json</artifactId>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>jcl-over-slf4j</artifactId>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
    </dependency>
    <dependency>
      <groupId>com.facebook.swift</groupId>
      <artifactId>swift-service</artifactId>
    </dependency>
    <dependency>
      <groupId>com.facebook.swift</groupId>
      <artifactId>swift-generator</artifactId>
    </dependency>
    <dependency>
      <groupId>org.restlet.jee</groupId>
      <artifactId>org.restlet</artifactId>
    </dependency>
    <!-- 

    <dependency>
      <groupId>org.restlet.jee</groupId>
      <artifactId>org.restlet.ext.servlet</artifactId>
    </dependency>
    -->
    <dependency>
      <groupId>org.restlet.jee</groupId>
      <artifactId>org.restlet.ext.freemarker</artifactId>
    </dependency>
    <!-- test scoped dependencies -->
    <dependency>
      <groupId>org.eclipse.persistence</groupId>
      <artifactId>eclipselink</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.thriftee</groupId>
      <artifactId>thriftee-examples</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>

  </dependencies>
  
  <profiles>
    <profile>
      <id>shade-jar-profile</id>
      <activation>
        <property><name>!maven.shade.skip</name></property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-shade-plugin</artifactId>
            <version>2.3</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <keepDependenciesWithProvidedScope>true</keepDependenciesWithProvidedScope>
                  <artifactSet>
                    <excludes>
                      <exclude>io.airlift:configuration</exclude>
                      <exclude>io.airlift:units</exclude>
                      <exclude>io.airlift:stats</exclude>
                      <exclude>io.netty:netty</exclude>
                      <exclude>slf4j-api:org.slf4j</exclude>
                      <exclude>com.google.*:guice-*</exclude>
                      <exclude>org.weakref:jmxutils</exclude>
                      <exclude>javax.inject:javax.inject</exclude>
                      <exclude>com.facebook.nifty:nifty-client</exclude>
                      <exclude>*:annotations</exclude>
                    </excludes>
                  </artifactSet>
                  <relocations>
                    <relocation>
                      <pattern>com.google</pattern>
                      <shadedPattern>thriftee.shaded.com.google</shadedPattern>
                    </relocation>
                    <relocation>
                      <pattern>com.thoughtworks</pattern>
                      <shadedPattern>thriftee.shaded.com.thoughtworks</shadedPattern>
                    </relocation>
                    <relocation>
                      <pattern>io.airlift</pattern>
                      <shadedPattern>thriftee.shaded.io.airlift</shadedPattern>
                    </relocation>
                    <relocation>
                      <pattern>javassist</pattern>
                      <shadedPattern>thriftee.shaded.javassist</shadedPattern>
                    </relocation>
                    <relocation>
                      <pattern>org.slf4j</pattern>
                      <shadedPattern>org.thriftee.logging</shadedPattern>
                    </relocation>
                    <relocation>
                      <pattern>ch.qos.logback</pattern>
                      <shadedPattern>thriftee.shaded.ch.qos.logback</shadedPattern>
                    </relocation>
                    <relocation>
                      <pattern>org.apache.commons</pattern>
                      <shadedPattern>thriftee.shaded.org.apache.commons</shadedPattern>
                    </relocation>
                    <relocation>
                      <pattern>org.apache.http</pattern>
                      <shadedPattern>thriftee.shaded.org.apache.http</shadedPattern>
                    </relocation>
                    <relocation>
                      <pattern>org.apache.thrift</pattern>
                      <shadedPattern>org.thriftee.thrift</shadedPattern>
                    </relocation>
                    <relocation>
                      <pattern>org.antlr</pattern>
                      <shadedPattern>thriftee.shaded.org.antlr</shadedPattern>
                    </relocation>
                    <relocation>
                      <pattern>org.objectweb</pattern>
                      <shadedPattern>thriftee.shaded.org.objectweb</shadedPattern>
                    </relocation>
                    <relocation>
                      <pattern>org.stringtemplate</pattern>
                      <shadedPattern>thriftee.shaded.org.stringtemplate</shadedPattern>
                    </relocation>
                    <relocation>
                      <pattern>org.scannotation</pattern>
                      <shadedPattern>thriftee.shaded.org.scannotation</shadedPattern>
                    </relocation>
                    <relocation>
                      <pattern>org.json</pattern>
                      <shadedPattern>thriftee.shaded.org.json</shadedPattern>
                    </relocation>
                    <!-- TODO: maybe do this with proguard instead, as it
                               seems that restlet likes to load things via
                               classpath URLs 
                    <relocation>
                      <pattern>org.restlet</pattern>
                      <shadedPattern>thriftee.shaded.org.restlet</shadedPattern>
                    </relocation>-->
                    <relocation>
                      <pattern>freemarker</pattern>
                      <shadedPattern>thriftee.shaded.freemarker</shadedPattern>
                    </relocation>
                    <relocation>
                      <pattern>com.facebook</pattern>
                      <shadedPattern>org.thriftee.swift</shadedPattern>
                      <excludes>
                        <exclude>com.facebook.swift.codec.ThriftConstructor</exclude>
                        <exclude>com.facebook.swift.codec.ThriftEnum</exclude>
                        <exclude>com.facebook.swift.codec.ThriftEnumValue</exclude>
                        <exclude>com.facebook.swift.codec.ThriftField</exclude>
                        <exclude>com.facebook.swift.codec.ThriftField$Requiredness</exclude>
                        <exclude>com.facebook.swift.codec.ThriftStruct</exclude>
                        <exclude>com.facebook.swift.codec.ThriftUnion</exclude>
                        <exclude>com.facebook.swift.service.ThriftException</exclude>
                        <exclude>com.facebook.swift.service.ThriftMethod</exclude>
                        <exclude>com.facebook.swift.service.ThriftService</exclude>
                      </excludes>
                    </relocation>
                  </relocations>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
