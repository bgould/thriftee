<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>ThriftEE Dashboard Webapp</display-name>
    <servlet>
        <servlet-name>FastCGI</servlet-name>
        <servlet-class>net.jr.fastcgi.FastCGIServlet</servlet-class>
        <init-param>
            <param-name>server-address</param-name>
            <param-value>localhost:6262</param-value>
        </init-param>
        <init-param>
            <param-name>start-executable</param-name>
            <param-value>/usr/bin/php-cgi -b6262</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>FastCGI</servlet-name>
        <url-pattern>*.php</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.php</welcome-file>
    </welcome-file-list>
</web-app>
