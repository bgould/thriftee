  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>2.3.1</version>
          <configuration>
            <source>${java.version}</source>
            <target>${java.version}</target>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>2.18.1</version>
          <configuration>
            <systemProperties>
              <property>
                <name>thriftee.build.dir</name>
                <value>target</value>
              </property>
              <property>
                <name>thriftee.command</name>
                <value>${thrift.exe}</value>
              </property>
            </systemProperties>
          </configuration>
        </plugin>
        <plugin>
          <groupId>com.mycila</groupId>
          <artifactId>license-maven-plugin</artifactId>
          <version>2.11</version>
          <configuration>
            <header>../src/main/license/APACHE-2.txt</header>
            <excludes>
              <exclude>**/README</exclude>
              <exclude>src/test/resources/**</exclude>
              <exclude>src/main/webapp/assets/**</exclude>
              <exclude>src/main/resources/**</exclude>
              <exclude>**/*.thrift</exclude>
            </excludes>
            <mapping>
              <java>SLASHSTAR_STYLE</java>
            </mapping>
          </configuration>
          <executions>
            <execution>
              <goals>
                <goal>check</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-shade-plugin</artifactId>
          <version>2.4.3</version>
          <executions>
            <execution>
              <phase>package</phase>
              <goals>
                <goal>shade</goal>
              </goals>
            </execution>
          </executions>
          <configuration>
            <artifactSet>
              <excludes>
                <!-- 
                <exclude>io.airlift:configuration</exclude>
                <exclude>io.airlift:units</exclude>
                <exclude>io.airlift:stats</exclude>
                <exclude>io.netty:netty</exclude>
                <exclude>slf4j-api:org.slf4j</exclude>
                <exclude>com.google.*:guice-*</exclude>
                <exclude>org.weakref:jmxutils</exclude>
                <exclude>javax.inject:javax.inject</exclude>
                <exclude>com.facebook.nifty:nifty-client</exclude>
                <exclude>*:annotations</exclude>
                 -->
                <exclude>net.sf.saxon:*</exclude>
              </excludes>
            </artifactSet>
            <createSourcesJar>true</createSourcesJar>
            <relocations>
              <relocation>
                <pattern>com.google</pattern>
                <shadedPattern>org.thriftee.shaded.com.google</shadedPattern>
              </relocation>
              <relocation>
                <pattern>com.thoughtworks</pattern>
                <shadedPattern>org.thriftee.shaded.com.thoughtworks</shadedPattern>
              </relocation>
              <relocation>
                <pattern>io.airlift</pattern>
                <shadedPattern>org.thriftee.shaded.io.airlift</shadedPattern>
              </relocation>
              <relocation>
                <pattern>javassist</pattern>
                <shadedPattern>org.thriftee.shaded.javassist</shadedPattern>
              </relocation>
              <relocation>
                <pattern>org.slf4j</pattern>
                <shadedPattern>org.thriftee.logging</shadedPattern>
              </relocation>
              <relocation>
                <pattern>ch.qos.logback</pattern>
                <shadedPattern>org.thriftee.shaded.ch.qos.logback</shadedPattern>
              </relocation>
              <relocation>
                <pattern>org.apache.commons</pattern>
                <shadedPattern>org.thriftee.shaded.org.apache.commons</shadedPattern>
              </relocation>
              <relocation>
                <pattern>org.apache.http</pattern>
                <shadedPattern>org.thriftee.shaded.org.apache.http</shadedPattern>
              </relocation>
              <!-- 
              <relocation>
                <pattern>org.apache.thrift</pattern>
                <shadedPattern>org.thriftee.thrift</shadedPattern>
              </relocation>
               -->
              <relocation>
                <pattern>org.antlr</pattern>
                <shadedPattern>org.thriftee.shaded.org.antlr</shadedPattern>
              </relocation>
              <relocation>
                <pattern>org.objectweb</pattern>
                <shadedPattern>org.thriftee.shaded.org.objectweb</shadedPattern>
              </relocation>
              <relocation>
                <pattern>org.stringtemplate</pattern>
                <shadedPattern>org.thriftee.shaded.org.stringtemplate</shadedPattern>
              </relocation>
              <relocation>
                <pattern>org.scannotation</pattern>
                <shadedPattern>org.thriftee.shaded.org.scannotation</shadedPattern>
              </relocation>
              <relocation>
                <pattern>org.json</pattern>
                <shadedPattern>org.thriftee.shaded.org.json</shadedPattern>
              </relocation>
              <relocation>
                <pattern>org.mozilla</pattern>
                <shadedPattern>org.thriftee.shaded.org.mozilla</shadedPattern>
              </relocation>
              <relocation>
                <pattern>com.yahoo</pattern>
                <shadedPattern>org.thriftee.shaded.com.yahoo</shadedPattern>
              </relocation>
              <relocation>
                <pattern>jargs</pattern>
                <shadedPattern>org.thriftee.shaded.jargs</shadedPattern>
              </relocation>
              <relocation>
                <pattern>org.restlet</pattern>
                <shadedPattern>org.thriftee.shaded.org.restlet</shadedPattern>
              </relocation>
              <relocation>
                <pattern>freemarker</pattern>
                <shadedPattern>org.thriftee.shaded.freemarker</shadedPattern>
              </relocation>
              <relocation>
                <pattern>com.facebook</pattern>
                <shadedPattern>org.thriftee</shadedPattern>
                <excludes>
                  <exclude>com.facebook.swift.codec.ThriftConstructor</exclude>
                  <exclude>com.facebook.swift.codec.ThriftDocumentation</exclude>
                  <exclude>com.facebook.swift.codec.ThriftEnum</exclude>
                  <exclude>com.facebook.swift.codec.ThriftEnumValue</exclude>
                  <exclude>com.facebook.swift.codec.ThriftField</exclude>
                  <exclude>com.facebook.swift.codec.ThriftField$Requiredness</exclude>
                  <exclude>com.facebook.swift.codec.ThriftStruct</exclude>
                  <exclude>com.facebook.swift.codec.ThriftUnion</exclude>
                  <exclude>com.facebook.swift.codec.ThriftUnionId</exclude>
                  <exclude>com.facebook.swift.service.ThriftException</exclude>
                  <exclude>com.facebook.swift.service.ThriftMethod</exclude>
                  <exclude>com.facebook.swift.service.ThriftService</exclude>
                </excludes>
              </relocation>
            </relocations>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>findbugs-maven-plugin</artifactId>
        <version>3.0.3</version>
        <configuration>
          <effort>Max</effort>
          <threshold>High</threshold>
          <xmlOutput>true</xmlOutput>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>thriftee-release</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.sonatype.plugins</groupId>
            <artifactId>nexus-staging-maven-plugin</artifactId>
            <version>1.6.3</version>
            <extensions>true</extensions>
            <configuration>
              <serverId>ossrh</serverId>
              <nexusUrl>https://oss.sonatype.org/</nexusUrl>
              <autoReleaseAfterClose>false</autoReleaseAfterClose>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-source-plugin</artifactId>
            <version>2.4</version>
            <executions>
              <execution>
                <id>attach-sources</id>
                <phase>verify</phase>
                <goals>
                  <goal>jar-no-fork</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>jar</goal>
                </goals>
                <configuration>
                  <additionalparam>-Xdoclint:none</additionalparam>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-gpg-plugin</artifactId>
            <version>1.5</version>
            <executions>
              <execution>
                <id>sign-artifacts</id>
                <phase>verify</phase>
                <goals>
                  <goal>sign</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
